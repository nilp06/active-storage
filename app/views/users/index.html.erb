<h1 class="text-center"> Users </h1>
<div class="container">
  <table class="table table-hover table-priamry table-stripted" >
    <thead>
      <th>User Name</th>
      <th>User Email</th>
      <th>Photo</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= image_tag user.avtar, width: "100", height: "100" %></td>
          <td>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-primary" %>
            <%= link_to "Delete", user_path(user), data: { turbo_method: "delete" }, class: "btn btn-primary"  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
